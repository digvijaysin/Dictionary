<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backimg"
    tools:context="com.example.myapplication.imoxford.Button4Fragment">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/easylogo"/>

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:id="@+id/facebook"
        android:background="@drawable/facebuk"/>
    <ImageButton
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:id="@+id/github"
        android:background="@drawable/githublogo"/>
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/insta"
        android:layout_marginTop="10dp"
        android:background="@drawable/instalogo"/>
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/whatsapp"
        android:layout_marginTop="10dp"
        android:background="@drawable/whatsapp"/>

</LinearLayout>
