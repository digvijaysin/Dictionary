<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/bg_gradient_start"
    tools:context="com.example.myapplication.imoxford.VoiceRecogniser">

    <TextView
        android:id="@+id/txtSpeechInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Let's Check How much You are Strong!"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/testing_code"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:maxLines="10"
        android:layout_marginBottom="10dp"
        android:textSize="10dp"
        android:textColor="@color/bg_gradient_start"
        android:background="@drawable/edittext_shape"
        android:hint="Enter Text Here"/>
<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <Button
        android:id="@+id/submit"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/button2_shape"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textColor="@color/bg_gradient_start"
        android:text="Submit"/>
    <Button
        android:id="@+id/reset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/button2_shape"
        android:textStyle="bold"
        android:textColor="@color/bg_gradient_start"
        android:text="Reset"/>
</LinearLayout>
    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/btnSpeak"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_keyboard_voice_black_24dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:text="Tap To Speak"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2"
        android:visibility="gone"
        android:text="Play" />

    <Button
        android:id="@+id/button4"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_marginTop="10dp"
        android:text="STOP PLAYING RECORDING " />
</LinearLayout>


